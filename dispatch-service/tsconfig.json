{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types"],
    "useUnknownInCatchVariables": false,
    "outDir": "api",
    "paths": {
      "Router": ["./routes/router"],
      "errorHandler": ["../authorization-service/middleware/errorMiddleware"],
      "notFound": ["../authorization-service/middleware/notFoundMiddleware"],
      "validateAccessToken": [
        "../authorization-service/middleware/auth0Middleware"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "filesGlob": ["../authorization-service/**/*.ts"]
}
